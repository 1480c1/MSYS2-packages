# Maintainer: Renato Silva <br.renatosilva@gmail.com>

_realname='pactoys'
pkgname="${_realname}"
pkgver=r53.c9d314f
pkgrel=1
pkgdesc='A set of pacman packaging utilities'
url='https://github.com/renatosilva/pactoys'
license=(BSD)
arch=(i686 x86_64)

conflicts=(
  ${_realname}-git
  repman-git
  updpkgver-git
)
replaces=(
  ${_realname}-git
  repman-git
  updpkgver-git
)
depends=(
  pacman
  pkgfile
  wget
)
makedepends=(
  gcc
  git
)
install="${_realname}.install"
_commit="c9d314f4"
source=("pactoys::git+https://github.com/msys2/pactoys#commit=${_commit}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_realname}"
  printf "r%s.%s" $(git rev-list --count HEAD) $(git rev-parse --short HEAD)
}

build() {
  cd "${srcdir}/${_realname}"
  make
}

package() {
  cd "${srcdir}/${_realname}"
  make DESTDIR="${pkgdir}" install
}
