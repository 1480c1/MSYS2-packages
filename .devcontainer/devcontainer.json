    "image": "ghcr.io/msys2/msys2-docker-devcontainer",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "MSYS2-MSYS",
                "terminal.integrated.profiles.linux": {
                    "MSYS2-MSYS": {
                        "path": "msys2",
                        "env": {
                            "MSYSTEM": "MSYS"
                        }
                    }
                }
            }
        }
    }
}